<%- include('../partials/header') %>

<main class="main" id="main">
    <div class="container">
        <div class="row">
            <div class="col align-self-end">
                <% if (prev != null) { %>
                    <a href="/<%= endpoint %>?page=<%= prev %>">prev</a>
                <% } %>

                <% if (next != null) { %>
                    <a href="/<%= endpoint %>?page=<%= next %>">next</a>
                <% } %>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-3 g-4">
        <% data.forEach(actor => { %>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h2 class="card-title">
                            <figure>
                                <img src="<%= actor.img_url %>" alt="Picture of <%= actor.first_name %> <%= actor.last_name %>" class="img-fluid">
                            </figure>
                            <%= actor.first_name %> <%= actor.last_name %>
                        </h2>
                    </div>
                    <div class="card-footer">
                        <p class="card-text">
                             
                        </p>
                    </div>
                </div>
            </div>
        <% }) %>


        </div
    </div>
</main>

<%- include('../partials/footer') %>